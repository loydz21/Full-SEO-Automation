# =============================================================================
# Full SEO Automation - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# NEVER commit .env to version control!
# =============================================================================


# === AI / LLM ================================================================

# OpenAI (REQUIRED — primary LLM for content generation & analysis)
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Google Gemini (RECOMMENDED — free-tier fallback LLM)
# Get your key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash


# === Google APIs ==============================================================

# Google Search Console (Optional — enhances keyword & ranking data)
# Setup: https://search.google.com/search-console → Settings → API Access
GSC_CREDENTIALS_PATH=config/gsc_credentials.json
GSC_PROPERTY_URL=https://your-website.com

# Google Analytics 4 (Optional — traffic & engagement metrics)
# Setup: https://analytics.google.com → Admin → Data API
GA4_CREDENTIALS_PATH=config/ga4_credentials.json
GA4_PROPERTY_ID=properties/123456789

# Google PageSpeed Insights (Optional — Core Web Vitals data)
# Get your key: https://console.cloud.google.com/apis/credentials
PAGESPEED_API_KEY=your-pagespeed-api-key-here


# === SEO Tools (Optional) =====================================================

# Proxy Configuration (for SERP scraping — reduces rate limiting)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# Custom User Agent (overrides default rotation)
# CUSTOM_USER_AGENT=


# === Email / Outreach (Optional) ==============================================

# SMTP Configuration (for outreach campaigns & alert notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true

# Alert Recipients (comma-separated for multiple addresses)
ALERT_EMAIL_TO=
ALERT_EMAIL_FROM=


# === App Settings =============================================================

# Database (default: SQLite in data/ directory)
DATABASE_URL=sqlite:///data/seo_automation.db

# Logging
LOG_LEVEL=INFO
# LOG_FILE=data/seo_automation.log

# Budget Control
MAX_MONTHLY_BUDGET=100.0
BUDGET_WARNING_PCT=80

# Cache
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE=10000

# Scheduler
SCHEDULER_TIMEZONE=UTC
SCHEDULER_MAX_CONCURRENT=3

# Dashboard
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost
# DASHBOARD_PASSWORD=          # Uncomment to enable basic auth


# === Content Defaults (Optional) ==============================================

# Override settings.yaml defaults
# CONTENT_TARGET_WORDS=1500
# CONTENT_READABILITY_TARGET=60
# CONTENT_KEYWORD_DENSITY_MAX=2.5


# === Development (Optional) ===================================================

# DEBUG=false
# TESTING=false
# DRY_RUN=false                 # Skip actual API calls
